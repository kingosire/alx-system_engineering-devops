#!/bin/bash

# Initialize counters
num_dirs=0
num_subdirs=0

# Loop through the directories and sub-directories
for dir in $(find . -mindepth 1 -maxdepth 1 -type d); do
	    # Exclude the current and parent directories
	        if [[ $dir != "." && $dir != ".." ]]; then
			        # Count directories
				        ((num_dirs++))

					        # Count sub-directories
						        num_subdirs=$((num_subdirs + $(find $dir -mindepth 1 -type d | wc -l)))
							    fi
						    done

						    # Print the results
						    echo "Number of directories: $num_dirs"
						    echo "Number of sub-directories: $num_subdirs"
						    
